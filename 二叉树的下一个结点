# 方法二
class Solution:
    def GetNext(self, pNode):
        if pNode.right:
            cur = pNode.right
            while cur.left:
                cur = cur.left
            return cur
        
        if pNode.next and pNode.next.left == pNode:
            return pNode.next
        
        if pNode.next:
            cur = pNode.next
            while cur.next and cur.next.right == cur:
                cur = cur.next
            return cur.next
        return None





from collections import deque
class Solution:
    def TreeDepth(self, pRoot):
        if not pRoot:
            return 0
        queue = deque([pRoot])
        res = 0
        while queue:
            for i in range(len(queue)):
                node = queue.popleft()
                if node.left:
                    queue.append(node.left) 
                if node.right:
                    queue.append(node.right)
            res += 1
        return res
            

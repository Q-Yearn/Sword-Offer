# 空间复杂度O(1)
class Solution:
    def FindGreatestSumOfSubArray(self , array):
        cur = array[0]
        res = array[0]
        for i in range(1, len(array)):
            cur = max(array[i], cur+array[i])
            res = max(res, cur)
        return res
